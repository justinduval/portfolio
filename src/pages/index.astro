---
import Layout from "../layouts/Layout.astro"
import ProductCards from "../components/ProductCards.astro";
import AnimatedTitle from '../components/AnimatedTitle.astro';

---

<Layout title="Tampon Web Conception">
		<section class="flex-grow py-12 px-2 sm:grid mx-auto sm:p-2 md:p-4 max-w-screen-2xl">
				<div class="justify-center items-center ">
					<h1 class="text-center w-full text-2xl sm:text-6xl font-righteous font-bold tracking-widest sm:mt-16">Conception de <span class="bg-gradient-to-bl from-primary-light to-secondary-dark text-transparent bg-clip-text">sites web</span></h1>
				</div>
				<div class="sm:flex sm:mt-16">
					<div class="sm:flex-col sm:mt-16 sm:w-1/2">
						<h1 class="hidden md:block"><AnimatedTitle ></h1>
						<h2 class="font-funnel text-center text-xs max-w-sm mx-auto sm:max-w-full sm:text-xl sm:tracking-widest sm:mt-8">Elevons vos projets vers de nouveaux sommets</h2>
					</div>	
					<div class="flex flex-col sm:w-1/2 xl:flex-row justify-self-end gap-6 p-4 justify-items-end">
						<ProductCards >
					</div>
				</div>

		</section>
</Layout>